    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        // 使用侧边栏新闻组件的方式来加载预览新闻
        document.addEventListener('DOMContentLoaded', function() {
            // 更新最后更新时间
            const now = new Date();
            document.getElementById('last-update-time').textContent = now.toLocaleString('zh-CN');
            
            // 加载北美地区预览
            loadRegionPreview('north-america', 'north-america-preview');
            
            // 加载中东地区预览
            loadRegionPreview('middle-east', 'middle-east-preview');
        });
        
        /**
         * 加载地区预览新闻
         * @param {string} region - 地区代码
         * @param {string} containerId - 容器ID
         */
        function loadRegionPreview(region, containerId) {
            const container = document.getElementById(containerId);
            const staticNewsDir = '/static-news';
            
            // 清空加载状态
            container.innerHTML = '';
            
            // 获取指定区域的新闻列表HTML
            fetch(`${staticNewsDir}/${region}/index.html`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('无法获取新闻列表');
                    }
                    return response.text();
                })
                .then(html => {
                    // 创建一个临时元素来解析HTML
                    const tempDiv = document.createElement('div');
                    tempDiv.innerHTML = html;
                    
                    // 提取新闻卡片
                    const newsCards = tempDiv.querySelectorAll('.news-card');
                    
                    if (newsCards.length === 0) {
                        container.innerHTML = '<p class="text-center">暂无该地区物流资讯</p>';
                        return;
                    }
                    
                    // 最多显示3条新闻
                    const maxDisplay = Math.min(3, newsCards.length);
                    
                    for (let i = 0; i < maxDisplay; i++) {
                        const card = newsCards[i];
                        const title = card.querySelector('.news-title').textContent;
                        const date = card.querySelector('.news-date').textContent;
                        const link = card.querySelector('a').getAttribute('href');
                        
                        // 创建新闻预览项
                        const newsItem = document.createElement('div');
                        newsItem.className = 'region-news-item';
                        newsItem.innerHTML = `
                            <a href="${link}">
                                ${title}
                                <span class="region-news-date">${date}</span>
                            </a>
                        `;
                        
                        container.appendChild(newsItem);
                    }
                })
                .catch(error => {
                    console.error('加载新闻失败:', error);
                    container.innerHTML = '<p class="text-center">暂无该地区物流资讯</p>';
                });
        }
    </script>
