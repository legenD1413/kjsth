        /**
         * 加载资讯列表
         */
        function loadNewsList() {
            const region = 'north-america';
            // 更新页面标题和区域标题
            document.title = '北美地区物流资讯 - 迈格库';
            
            // 获取新闻列表容器
            const newsListContainer = document.getElementById('news-list');
            
            // 添加加载状态
            newsListContainer.innerHTML = `
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">加载中...</span>
                    </div>
                    <p class="mt-2">正在加载资讯...</p>
                </div>
            `;
            
            // 构建静态资讯路径
            const staticNewsPath = '../static-news/north-america/index.html';
            
            // 获取静态资讯数据
            fetch(staticNewsPath)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('获取资讯失败');
                    }
                    return response.text();
                })
                .then(html => {
                    // 解析HTML
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    
                    // 使用更精确的选择器匹配新闻卡片
                    const newsCards = doc.querySelectorAll('div.news-card');
                    console.log('找到新闻卡片数量:', newsCards.length);
                    
                    if (!newsCards || newsCards.length === 0) {
                        newsListContainer.innerHTML = `
                            <div class="empty-news">
                                <i class="far fa-newspaper"></i>
                                <h3>暂无符合条件的物流资讯</h3>
                                <p>请稍后再查看或调整筛选条件</p>
                            </div>
                        `;
                        return;
                    }
                    
                    // 解析新闻数据
                    const newsList = [];
                    
                    newsCards.forEach((card) => {
                        // 提取标题，使用更精确的选择器
                        const titleEl = card.querySelector('h2.news-title');
                        let title = titleEl ? titleEl.textContent.trim() : '无标题';
                        
                        // 移除"新"标签文本
                        title = title.replace(/新$/, '').trim();
                        
                        // 提取链接
                        const linkEl = card.querySelector('.news-read-more');
                        const link = linkEl ? linkEl.getAttribute('href') : '#';
                        
                        // 提取日期
                        const dateEl = card.querySelector('.news-date');
                        const date = dateEl ? dateEl.textContent.replace(/[\n\r]/g, '').trim() : '未知日期';
                        
                        // 提取摘要
                        const excerptEl = card.querySelector('.news-excerpt');
                        const excerpt = excerptEl ? excerptEl.textContent.trim() : '暂无摘要';
                        
                        // 提取重要性
                        let importance = 1; // 默认普通
                        const importanceEl = card.querySelector('.news-importance');
                        if (importanceEl) {
                            if (importanceEl.classList.contains('importance-important')) {
                                importance = 2; // 重要
                            } else if (importanceEl.classList.contains('importance-very_important')) {
                                importance = 3; // 非常重要
                            }
                        }
                        
                        // 判断是否为新文章
                        const isNew = titleEl ? titleEl.innerHTML.includes('新') : false;
                        
                        // 日志调试
                        console.log('解析文章:', title, link);
                        
                        newsList.push({
                            title,
                            link: `../static-news/${region}/${link.replace('./', '')}`,
                            importance,
                            date: date.replace(/[^0-9\-]/g, ''),
                            excerpt,
                            isNew
                        });
                    });
                    
                    // 渲染新闻列表
                    renderNewsList(newsList);
                })
                .catch(error => {
                    console.error('加载资讯失败:', error);
                    newsListContainer.innerHTML = `
                        <div class="empty-news">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h3>加载资讯失败</h3>
                            <p>请稍后再试或联系网站管理员</p>
                        </div>
                    `;
                });
        }

        /**
         * 渲染新闻列表
         * @param {Array} newsList - 新闻列表数据
         */
        function renderNewsList(newsList) {
            const newsListContainer = document.getElementById('news-list');
            
            if (newsList.length === 0) {
                newsListContainer.innerHTML = `
                    <div class="empty-news">
                        <i class="far fa-newspaper"></i>
                        <h3>暂无符合条件的物流资讯</h3>
                        <p>请稍后再查看或调整筛选条件</p>
                    </div>
                `;
                return;
            }
            
            let html = '';
            
            newsList.forEach((news) => {
                html += `
                    <div class="news-card" data-region="${news.region || 'north-america'}">
                        <h3 class="news-title">
                            ${news.title}
                            ${news.isNew ? '<span class="news-new-badge">新</span>' : ''}
                        </h3>
                        <div class="news-meta">
                            <div class="news-date">
                                <i class="far fa-calendar-alt"></i>
                                ${news.date}
                            </div>
                            <div class="news-importance importance-${news.importance}">
                                ${news.importance === 3 ? '非常重要' : news.importance === 2 ? '重要' : '普通'}
                            </div>
                        </div>
                        <div class="news-excerpt">
                            ${news.excerpt}
                        </div>
                        <a href="${news.link}" class="news-read-more">
                            阅读全文 <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                `;
            });
            
            newsListContainer.innerHTML = html;
        }

        /**
         * 搜索资讯功能
         */
        function searchNews() {
            const searchInput = document.getElementById('news-search');
            const searchTerm = searchInput.value.trim().toLowerCase();
            const searchResults = document.getElementById('search-results');
            
            if (searchTerm === '') {
                searchResults.innerHTML = '';
                return;
            }
            
            const newsCards = document.querySelectorAll('.news-card');
            let matchCount = 0;
            
            // 重置所有卡片显示
            newsCards.forEach(card => {
                card.style.display = 'block';
                
                // 去除之前的高亮
                const title = card.querySelector('.news-title');
                title.innerHTML = title.innerHTML.replace(/<mark class="highlight">(.*?)<\/mark>/g, '$1');
                
                const excerpt = card.querySelector('.news-excerpt');
                excerpt.innerHTML = excerpt.innerHTML.replace(/<mark class="highlight">(.*?)<\/mark>/g, '$1');
                
                // 检查标题和摘要是否包含搜索词
                const titleText = title.textContent.toLowerCase();
                const excerptText = excerpt.textContent.toLowerCase();
                
                if (titleText.includes(searchTerm) || excerptText.includes(searchTerm)) {
                    matchCount++;
                    
                    // 高亮匹配内容
                    if (titleText.includes(searchTerm)) {
                        const regex = new RegExp('(' + searchTerm + ')', 'gi');
                        title.innerHTML = title.innerHTML.replace(regex, '<mark class="highlight">$1</mark>');
                    }
                    
                    if (excerptText.includes(searchTerm)) {
                        const regex = new RegExp('(' + searchTerm + ')', 'gi');
                        excerpt.innerHTML = excerpt.innerHTML.replace(regex, '<mark class="highlight">$1</mark>');
                    }
                } else {
                    card.style.display = 'none';
                }
            });
            
            // 显示搜索结果信息
            if (matchCount > 0) {
                searchResults.innerHTML = `找到 ${matchCount} 条相关资讯`;
            } else {
                searchResults.innerHTML = '没有找到相关资讯';
                
                // 如果没有结果，显示空状态
                const newsListContainer = document.getElementById('news-list');
                newsListContainer.innerHTML = `
                    <div class="empty-news">
                        <i class="fas fa-search"></i>
                        <h3>没有找到相关资讯</h3>
                        <p>请尝试使用其他关键词搜索</p>
                    </div>
                `;
            }
        }

        // 搜索框回车事件
        document.getElementById('news-search').addEventListener('keyup', function(event) {
            if (event.key === 'Enter') {
                searchNews();
            }
        });

        // 筛选功能
        document.querySelectorAll('.form-check-input').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                // 处理"全部"复选框
                if (this.id === 'filter-all' && this.checked) {
                    document.querySelectorAll('.form-check-input:not(#filter-all)').forEach(cb => {
                        cb.checked = false;
                    });
                } else if (this.id !== 'filter-all' && this.checked) {
                    document.getElementById('filter-all').checked = false;
                }
                
                // 如果没有选中任何复选框，则默认选中"全部"
                const anyChecked = Array.from(document.querySelectorAll('.form-check-input')).some(cb => cb.checked);
                if (!anyChecked) {
                    document.getElementById('filter-all').checked = true;
                }
                
                // 应用筛选
                applyFilters();
            });
        });

        /**
         * 应用筛选逻辑
         */
        function applyFilters() {
            const allChecked = document.getElementById('filter-all').checked;
