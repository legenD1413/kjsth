    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 获取DOM元素
            const lengthInput = document.getElementById('length');
            const widthInput = document.getElementById('width');
            const heightInput = document.getElementById('height');
            const actualWeightInput = document.getElementById('actual-weight');
            const shippingMethodSelect = document.getElementById('shipping-method');
            const destinationZoneSelect = document.getElementById('destination-zone');
            const cargoTypeSelect = document.getElementById('cargo-type');
            const insuranceSelect = document.getElementById('insurance');
            const calculateBtn = document.getElementById('calculate-btn');
            const resultDiv = document.getElementById('result');
            const resultContent = document.getElementById('result-content');
            
            // 运费基础价格表 ($/kg)
            const basePriceTable = {
                'air': {
                    'east': 7.5,
                    'central': 7.8,
                    'west': 7.2,
                    'remote': 9.5
                },
                'express': {
                    'east': 9.8,
                    'central': 10.2,
                    'west': 9.5,
                    'remote': 12.5
                },
                'sea': {  // 海运按立方米计费 ($/CBM)
                    'east': 150,
                    'central': 160,
                    'west': 145,
                    'remote': 190
                },
                'us-special': {
                    'east': 6.8,
                    'central': 7.0,
                    'west': 6.5,
                    'remote': 8.5
                }
            };
            
            // 特殊货物附加费率
            const cargoSurchargeRate = {
                'regular': 0,
                'battery': 0.15,  // 15% 附加费
                'liquid': 0.2,    // 20% 附加费
                'sensitive': 0.3  // 30% 附加费
            };
            
            // 体积重系数
            const volumeDivisor = {
                'air': 6000,
                'express': 5000,
                'sea': 1,  // 海运不用体积重计算
                'us-special': 4500
            };
            
            // 点击计算按钮
            calculateBtn.addEventListener('click', function() {
                // 获取输入值
                const length = parseFloat(lengthInput.value);
                const width = parseFloat(widthInput.value);
                const height = parseFloat(heightInput.value);
                const actualWeight = parseFloat(actualWeightInput.value);
                const shippingMethod = shippingMethodSelect.value;
                const destinationZone = destinationZoneSelect.value;
                const cargoType = cargoTypeSelect.value;
                const insurance = insuranceSelect.value;
                
                // 验证输入
                if (isNaN(length) || isNaN(width) || isNaN(height) || isNaN(actualWeight)) {
                    resultContent.innerHTML = '<p class="text-danger">请输入有效的尺寸和重量</p>';
                    resultDiv.style.display = 'block';
                    return;
                }
                
                if (length <= 0 || width <= 0 || height <= 0 || actualWeight <= 0) {
                    resultContent.innerHTML = '<p class="text-danger">尺寸和重量必须大于零</p>';
                    resultDiv.style.display = 'block';
                    return;
                }
                
                // 计算结果
                let volumeWeight = 0;
                let chargeableWeight = actualWeight;
                let volumeInCBM = 0;
                let basePrice = 0;
                let totalPrice = 0;
                let surcharge = 0;
                let insuranceFee = 0;
                
                // 海运按立方米计算
                if (shippingMethod === 'sea') {
                    volumeInCBM = (length * width * height) / 1000000;  // 转换为立方米
                    totalPrice = volumeInCBM * basePriceTable[shippingMethod][destinationZone];
                    
                    // 添加货物类型附加费
                    surcharge = totalPrice * cargoSurchargeRate[cargoType];
                    totalPrice += surcharge;
                    
                    // 添加保险费 (假设货物价值 = $50/kg)
                    if (insurance === 'yes') {
                        const cargoValue = actualWeight * 50;  // 估算货值
                        insuranceFee = cargoValue * 0.02;  // 2% 保险费率
                        totalPrice += insuranceFee;
                    }
                    
                    // 格式化显示结果
                    resultContent.innerHTML = `
                        <p><strong>货物体积：</strong> ${volumeInCBM.toFixed(3)} 立方米</p>
                        <p><strong>实际重量：</strong> ${actualWeight.toFixed(2)} kg</p>
                        <p><strong>基础运费：</strong> $${(volumeInCBM * basePriceTable[shippingMethod][destinationZone]).toFixed(2)}</p>
                        ${surcharge > 0 ? `<p><strong>特殊货物附加费：</strong> $${surcharge.toFixed(2)}</p>` : ''}
                        ${insuranceFee > 0 ? `<p><strong>保险费：</strong> $${insuranceFee.toFixed(2)}</p>` : ''}
                        <p class="result-value">总运费：$${totalPrice.toFixed(2)}</p>
                        <p>* 以上价格仅供参考，实际价格以客服报价为准</p>
                    `;
                } else {
                    // 计算体积重
                    volumeWeight = (length * width * height) / volumeDivisor[shippingMethod];
                    
                    // 取实际重量和体积重中的较大值作为计费重量
                    chargeableWeight = Math.max(actualWeight, volumeWeight);
                    
                    // 计算基础运费
                    basePrice = chargeableWeight * basePriceTable[shippingMethod][destinationZone];
                    totalPrice = basePrice;
                    
                    // 添加货物类型附加费
                    surcharge = totalPrice * cargoSurchargeRate[cargoType];
                    totalPrice += surcharge;
                    
                    // 添加保险费 (假设货物价值 = $50/kg)
                    if (insurance === 'yes') {
                        const cargoValue = actualWeight * 50;  // 估算货值
                        insuranceFee = cargoValue * 0.02;  // 2% 保险费率
                        totalPrice += insuranceFee;
                    }
                    
                    // 格式化显示结果
                    resultContent.innerHTML = `
                        <p><strong>体积重：</strong> ${volumeWeight.toFixed(2)} kg</p>
                        <p><strong>实际重量：</strong> ${actualWeight.toFixed(2)} kg</p>
                        <p><strong>计费重量：</strong> ${chargeableWeight.toFixed(2)} kg</p>
                        <p><strong>基础运费：</strong> $${basePrice.toFixed(2)}</p>
                        ${surcharge > 0 ? `<p><strong>特殊货物附加费：</strong> $${surcharge.toFixed(2)}</p>` : ''}
                        ${insuranceFee > 0 ? `<p><strong>保险费：</strong> $${insuranceFee.toFixed(2)}</p>` : ''}
                        <p class="result-value">总运费：$${totalPrice.toFixed(2)}</p>
                        <p>* 以上价格仅供参考，实际价格以客服报价为准</p>
                    `;
                }
                
                resultDiv.style.display = 'block';
            });
        });
    </script>
</body>
</html> 